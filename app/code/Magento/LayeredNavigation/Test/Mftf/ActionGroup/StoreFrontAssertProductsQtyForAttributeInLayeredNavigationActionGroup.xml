<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StoreFrontAssertProductsQtyForAttributeInLayeredNavigationActionGroup">
        <annotations>
            <description> Assert products qty for attribute - takes qty displayed in layered navigation next to attribute</description>
        </annotations>
        <arguments>
            <argument name="qty" type="string"/>
            <argument name="attributeName" type="string"/>
        </arguments>

        <grabTextFrom selector="{{StorefrontLayeredNavigationSection.productsForAttribute(attributeName)}}" stepKey="grabProductQty"/>

        <assertEquals stepKey="assertQty">
           <actualResult type="const">$grabProductQty</actualResult>
           <expectedResult type="string">{{qty}}</expectedResult>
         </assertEquals>

    </actionGroup>
</actionGroups>

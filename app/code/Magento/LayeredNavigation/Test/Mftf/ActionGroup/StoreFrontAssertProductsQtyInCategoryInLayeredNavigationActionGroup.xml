<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StoreFrontAssertProductsQtyInCategoryInLayeredNavigationActionGroup">
        <annotations>
            <description> Assert products qty in the category - takes qty displayed in layered navigation next to category name</description>
        </annotations>
        <arguments>
            <argument name="qty" type="string"/>
            <argument name="category" type="string"/>
        </arguments>


        <grabTextFrom selector="//dl[@class='options']//ol[@class='items']//li[@class='item']//a[contains(text(),'{{category}}')]/following-sibling::span[@class='count']" stepKey="grabProductQty"/>

        <assertEquals expected="{{qty}}" actual="$grabProductQty" stepKey="assertQty"/>
    </actionGroup>
</actionGroups>
